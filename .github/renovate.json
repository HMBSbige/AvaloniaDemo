{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"assignees": [
		"HMBSbige"
	],
	"dependencyDashboard": false,
	"extends": [
		"config:recommended",
		":configMigration",
		":automergeBranch",
		":automergeDigest",
		":automergeMinor",
		":disableRateLimiting"
	],
	"packageRules": [
		{
			"matchSourceUrls": [
				"https://github.com/abpframework/abp"
			],
			"groupName": "abp"
		},
		{
			"matchSourceUrls": [
				"https://github.com/reactiveui/ReactiveUI"
			],
			"groupName": "ReactiveUI"
		},
		{
			"matchDatasources": [
				"nuget"
			],
			"registryUrls": [
				"https://api.nuget.org/v3/index.json",
				"https://nuget.loongnix.cn/v3/index.json"
			]
		}
	],
	"labels": [
		"Automatic"
	],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/(^|/)Directory.Build.props$/"
			],
			"matchStrings": [
				"<RuntimeFrameworkVersion>(?<currentValue>.*?)</RuntimeFrameworkVersion>"
			],
			"depNameTemplate": "Microsoft.NETCore.App.Host.linux-loongarch64",
			"datasourceTemplate": "nuget"
		}
	]
}